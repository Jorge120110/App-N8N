<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_tipo_nota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo de Nota"
                android:textStyle="bold"
                android:textColor="@color/azul_principal"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_fecha_nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de CreaciÃ³n"
                android:textColor="@color/azul_principal"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btn_eliminar_nota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Eliminar nota"
                android:tint="@color/rojo_error"/>

            <ImageButton
                android:id="@+id/btn_compartir_nota"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_share"
                android:contentDescription="Compartir nota"
                android:layout_marginStart="4dp"
                card_view:tint="@color/azul_principal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_asunto_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto"
            android:textStyle="bold"
            android:textColor="#222"
            android:textSize="18sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_resumen_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de la nota"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_contenido_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido completo"
            android:textColor="#444"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
