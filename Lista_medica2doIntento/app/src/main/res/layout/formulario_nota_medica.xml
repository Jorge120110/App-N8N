<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <EditText
        android:id="@+id/et_fecha_nota_medica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (dd/mm/aaaa)"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="number"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/et_asunto_nota_medica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asunto"
        android:textColorHint="#888888"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_contenido_nota_medica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción o detalles"
        android:textColorHint="#888888"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_guardar_nota_medica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Nota Médica"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"/>
</LinearLayout>
