<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/fondo_principal">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/icono_app_p1"
        android:layout_marginBottom="32dp"
        android:contentDescription="Logo de la app"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a MediNotas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/azul_principal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus notas médicas respaldadas automáticamente en Google Drive"
        android:textSize="16sp"
        android:textColor="@color/negro"
        android:textAlignment="center"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btn_iniciar_sesion_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔐 Iniciar sesión con Google"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="@color/azul_principal"
        android:textColor="@color/blanco"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_omitir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usar sin Google Drive"
        android:textSize="14sp"
        android:backgroundTint="@color/gris_claro"
        android:textColor="@color/negro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puedes configurar Google Drive más tarde desde tu perfil"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>

