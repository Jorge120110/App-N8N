<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_principal"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_titulo_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/azul_principal"
        android:layout_marginBottom="8dp"/>

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <Button
            android:id="@+id/btn_hospitales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hospitales"
            android:backgroundTint="@color/azul_principal"
            android:textColor="@color/blanco"/>
        <Button
            android:id="@+id/btn_farmacias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Farmacias"
            android:backgroundTint="@color/verde_claro"
            android:textColor="@color/negro"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_resultados_cercanos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados cercanos"
        android:textStyle="bold"
        android:textColor="@color/azul_principal"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/layout_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>
