<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <EditText
        android:id="@+id/et_fecha_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (dd/mm/aaaa)"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:inputType="number"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/et_recetado_por"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recetado por"
        android:textColorHint="#888888"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_medicamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicamentos o tratamientos"
        android:textColorHint="#888888"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/et_indicaciones_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indicaciones"
        android:textColorHint="#888888"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_guardar_receta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Receta"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"/>
</LinearLayout>
