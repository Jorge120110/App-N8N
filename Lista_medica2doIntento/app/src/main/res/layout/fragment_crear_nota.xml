<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_principal"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_titulo_crear_nota"
        android:text="Crear Nota"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/azul_principal"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_crear_nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_celeste"
        app:tabIndicatorColor="@color/azul_principal"
        app:tabTextColor="@color/azul_principal"
        app:tabSelectedTextColor="@color/azul_principal"
        android:layout_marginBottom="12dp"/>

    <FrameLayout
        android:id="@+id/contenedor_crear_nota"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
